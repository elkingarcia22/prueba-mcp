{
  "mcpServers": {
    "tavily": {
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp@0.1.3"
      ],
      "env": {
        "TAVILY_API_KEY": "${input:TAVILY_API_KEY}"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "${input:FIRECRAWL_API_KEY}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${input:GITHUB_PAT}"
      }
    },
    "storybook": {
      "command": "npx",
      "args": [
        "-y",
        "storybook-mcp@latest"
      ],
      "env": {
        "STORYBOOK_URL": "http://localhost:6006/index.json"
      }
    },
    "figma-dev-mode": {
      "type": "http",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "supabase": {
